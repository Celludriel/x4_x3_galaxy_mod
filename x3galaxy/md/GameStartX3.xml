<?xml version="1.0" encoding="utf-8"?>
<mdscript name="GameStartX3" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="md.xsd">
  <cues>
    <cue name="Debug_X3_MakeFactionsKnown" module="x3_galaxy_main">
      <conditions>
        <event_cue_signalled cue="md.Setup.GameStart" />
      </conditions>
      <actions>
        <!--Make known-->
        <show_help custom="'Setting satellites!'"/>
        <find_sector name="$sectors" multiple="true" required="true"/>
        <do_all exact="$sectors.count" counter="$i">
          <!--<set_known object="$sectors.{$i}" known="true"/>-->
          <show_help custom="$sectors.{$i}.knownname"/>
          <create_ship name="$ship" macro="macro.ship_arg_s_fighter_02_a_macro" sector="$sectors.{$i}">
            <owner exact="faction.player"/>
            <position x="500" y="0" z="0"/>
            <rotation yaw="190deg" pitch="20deg" roll="10deg"/>
          </create_ship>
          <create_object name="$satellite" macro="[macro.eq_arg_satellite_01_macro, macro.eq_arg_satellite_02_macro].random" owner="faction.player" sector="$sectors.{$i}">
            <safepos max="15km"/>
          </create_object>
        </do_all>
      </actions>
    </cue>
  </cues>
</mdscript>
        